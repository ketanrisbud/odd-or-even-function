node {
    withEnv(['AZURE_SUBSCRIPTION_ID=09fffce3-b344-44fa-90ad-16f7166530fb',
            'AZURE_TENANT_ID=ec8933c6-cfb2-4dd9-bfc9-621cde1dea8f']) {
        stage('Init') {
            cleanWs()
            checkout scm
        }

        stage('Build') {
            sh 'mvn -e -X clean package'
        }

        stage('Publish') {
            def RESOURCE_GROUP = 'rg-pc-devqa-eastus' 
            def FUNC_NAME = 'func-pc-dev'
            // login Azure
            withCredentials([usernamePassword(credentialsId: 'AzureJenkinsSPN', passwordVariable: 'AZURE_CLIENT_SECRET', usernameVariable: 'AZURE_CLIENT_ID')]) {
            sh '''
                az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID
                az account set -s $AZURE_SUBSCRIPTION_ID
            '''
            }
            sh 'cd $PWD/target/azure-functions/odd-or-even-function-sample && zip -r ../../../archive.zip ./* && cd -'
            sh "az functionapp deployment source config-zip -g $RESOURCE_GROUP -n $FUNC_NAME --src archive.zip"
            sh 'az logout'
        }
    }
}
